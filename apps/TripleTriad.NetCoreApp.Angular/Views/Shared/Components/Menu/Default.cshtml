@model MenuViewComponentModel

<nav class="navbar navbar-dark navbar-fixed-top bg-inverse">
	<button class="navbar-toggler hidden-sm-up" type="button" data-toggle="collapse" data-target="#navbar-header" aria-controls="navbar-header">
		&#9776;
	</button>
	<div class="collapse navbar-toggleable-xs" id="navbar-header">
		<a asp-controller="Home" asp-action="Index" class="navbar-brand">TripleTriad.Web.Angular</a>
		<ul class="nav navbar-nav">
			<li class="nav-item"><a class="nav-link" asp-controller="Card" asp-action="Index">Cards</a></li>
			<li class="nav-item"><a class="nav-link" asp-controller="Deck" asp-action="Index">Decks</a></li>
			<li class="nav-item"><a class="nav-link" asp-controller="Player" asp-action="Index">Players</a></li>
			<li class="nav-item"><a class="nav-link" asp-controller="Game" asp-action="Index">Games</a></li>
		</ul>
		@if (User.Identity.IsAuthenticated)
		{
			<ul class="nav navbar-nav pull-right">
				<li class="nav-item dropdown">
					<a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
						@Model.FullName
					</a>

					<ul class="dropdown-menu dropdown-menu-right">
						<li>
							<span class="dropdown-item">
								<span class="label label-default label-pill pull-xs-right">@Model.Wins</span>
								@Html.DisplayNameFor(x => x.Wins)
							</span>
							<span class="dropdown-item">
								<span class="label label-default label-pill pull-xs-right">@Model.Losses</span>
								@Html.DisplayNameFor(x => x.Losses)
							</span>
						</li>
						<li class="dropdown-divider"></li>
						<li><a class="dropdown-item" href="#">Settings</a></li>
						<li class="dropdown-divider"></li>
						<li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a></li>
					</ul>
				</li>
			</ul>

			@if (Model.NotificationCount > 0)
			{
				<ul class="nav navbar-nav pull-xs-right">
					<li class="nav-item dropdown">
						<a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
							<span class="fa fa-bell"></span>
						</a>

						<ul class="dropdown-menu dropdown-menu-right">
							<li>
								<a class="dropdown-item" href="#">View All</a>
							</li>
						</ul>
					</li>
				</ul>
			}
		}
	</div>
</nav>
