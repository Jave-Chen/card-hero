<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TripleTriad.Web.SemanticUI</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/semantic/dist/semantic.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>

	@await RenderSectionAsync("styles", required: false)
</head>
<body>
	<div class="ui fixed inverted menu">
		<div class="ui container">
			<a asp-controller="Home" asp-action="Index" class="header item">
				@*<img class="logo" src="assets/images/logo.png">*@
				TripleTriad.Web.SemanticUI
			</a>

			<a asp-controller="Home" asp-action="Index" class="item">Home</a>
			<a asp-controller="Home" asp-action="About" class="item">About</a>
			<a asp-controller="Home" asp-action="Contact" class="item">Contact</a>
			<a asp-controller="Card" asp-action="Index" class="item">Cards</a>
			<a asp-controller="Player" asp-action="Index" class="item">Players</a>
		</div>
	</div>
	<div class="ui main container">
		@RenderBody()
	</div>

	<div class="ui inverted footer segment">
		<footer class="ui container">
			<p>&copy; 2016 - TripleTriad.Web.SemanticUI</p>
		</footer>
	</div>

	<environment names="Development">
		<script src="~/lib/jquery/dist/jquery.js"></script>
		<script src="~/lib/semantic/dist/semantic.js"></script>
		<script src="~/js/site.js" asp-append-version="true"></script>
	</environment>
	<environment names="Staging,Production">
		<script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
				asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
				asp-fallback-test="window.jQuery">
		</script>
		<script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/bootstrap.min.js"
				asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
				asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
		</script>
		<script src="~/js/site.min.js" asp-append-version="true"></script>
	</environment>

	@RenderSection("scripts", required: false)
</body>
</html>
